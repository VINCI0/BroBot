<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tvNews"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="News"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        />

    <RelativeLayout
        android:id="@+id/rlNews"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:background="@color/colorAccent"
        android:backgroundTintMode="multiply"
        app:layout_constrainedHeight="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvNews"
        android:padding="10dp">


        <Button

            android:id="@+id/interest_15"
            android:text="Weather"


            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:textAllCaps="false"
            android:backgroundTint="@color/colorLightFont"
            android:textColor="@color/colorPrimary"

            />


        <Button
            android:text="Health"
            android:id="@+id/interest_16"
            android:layout_toRightOf="@+id/interest_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:textAllCaps="false"
            android:tag="1"

            />

        <Button
            android:text="General News"
            android:layout_below="@id/interest_16"
            android:id="@+id/interest_17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:textAllCaps="false"
            android:backgroundTint="@color/colorLightFont"
            android:textColor="@color/colorPrimary"



            />

        <Button

            android:id="@+id/interest_18"
            android:layout_toRightOf="@+id/interest_17"
            android:layout_below="@id/interest_15"
            android:text="Politics"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:textAllCaps="false"
            android:backgroundTint="@color/colorLightFont"
            android:textColor="@color/colorPrimary"

            />


        <Button

            android:id="@+id/interest_19"
            android:text="Business"
            android:layout_toRightOf="@id/interest_16"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:textAllCaps="false"
            android:tag="1"


            />

        <Button

            android:id="@+id/interest_20"
            android:text="Science"
            android:layout_toEndOf="@id/interest_18"
            android:layout_below="@id/interest_15"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:textAllCaps="false"
            android:tag="1"

            />


    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>