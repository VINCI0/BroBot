<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/border_round"
    android:layout_margin="10dp"
    android:padding="5dp">


    <TextView
        android:id="@+id/journal_name"
        android:padding="10dp"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Journal Name Here"
        android:textAllCaps="true"
        />

    <Button
        android:id="@+id/journalDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date Displayed Here"
        app:layout_constraintTop_toTopOf="@id/journal_name"
        app:layout_constraintBottom_toBottomOf="@id/journal_name"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginRight="10dp"
        />

    <EditText
        android:id="@+id/journal_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/journal_name"
        app:layout_constraintStart_toStartOf="parent"
        android:inputType="none"
        android:enabled="false"
        />


</androidx.constraintlayout.widget.ConstraintLayout>